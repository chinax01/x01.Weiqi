<Window x:Class="x01.Weiqi.Board.SaveStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Step Window" Height="223" Width="226">
    <StackPanel HorizontalAlignment="Center" Margin="10 20 10 10">
        <StackPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Width" Value="120" />
            </Style>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="5" />
            </Style>
        </StackPanel.Resources>
        <StackPanel Orientation="Horizontal">
            <Label>黑方：</Label>
            <TextBox Name="m_BlackName" >blacker</TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>白方：</Label>
            <TextBox Name="m_WhiteName">whiter</TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>结果：</Label>
            <TextBox Name="m_Winer">unknown</TextBox>
        </StackPanel>
        <Button Name="OK" Click="OK_Click" HorizontalAlignment="Right" Width="60" Margin="10 20 10 10">保存</Button>
    </StackPanel>
</Window>