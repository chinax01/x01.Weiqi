<Window xmlns:my="clr-namespace:x01.Weiqi"  x:Class="x01.Weiqi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="800" Height="800">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="16" />
        </Style>
    </Window.Resources>
    <DockPanel Name="m_DockPanel"> 
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left" >
            <MenuItem Header="围棋(_F)" ToolTip="Weiqi">
                <MenuItem Header="开始对弈(_G)      Ctl+G" ToolTip="Start Game" Name="m_MenuStart" Click="MenuStart_Click"></MenuItem>
                <MenuItem Header="网络对弈(_W)     Ctl+W" ToolTip="Web Game" Name="m_MenuWeb" Click="MenuWeb_Click"></MenuItem>
                <MenuItem Header="人机对弈(_I)       Ctl+I" ToolTip="AI Game" Name="m_MenuAI"  Click="MenuAI_Click"></MenuItem>
                <Separator />
                <MenuItem Header="加载棋谱(_L)      Ctl+L" ToolTip="Load" Name="m_MenuLoad"  Click="MenuLoad_Click"></MenuItem>
                <MenuItem Header="保存棋谱(_S)      Ctl+S" ToolTip="Save" Name="m_MenuSave"  Click="MenuSave_Click"></MenuItem>
                <MenuItem Header="删除棋谱(_D)     Ctl+D" ToolTip="Delete" Name="m_MenuDelete"  Click="MenuDelete_Click"></MenuItem>
                <Separator />
                <MenuItem Header="退出(_E)            Ctl+E" ToolTip="Exit" Name="m_MenuExit"  Click="MenuExit_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="操作(_O)" ToolTip="Operate" >
                <MenuItem Header="显示步数(_N)     F1" ToolTip="Show Number" Name="m_MenuShowNumber"  Click="MenuShowNumber_Click" IsChecked="True" IsCheckable="True"/>
                <MenuItem Header="清除所有(_C)     ESC" ToolTip="Clear All" Name="m_MenuClearAll" Click="MenuClearAll_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="帮助(_H)" ToolTip="Help">
                <MenuItem Header="关于(_A)" ToolTip="About" Name="m_MenuAbout"  Click="MenuAbout_Click"></MenuItem>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>